<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Henry's Bookstore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

<div class="header-image">
    <h1>Henry's Bookstore</h1>
</div>
<div>
    <p id="tagline-disclaimer">For INTERNAL Use Only</p>
</div>
<div class="navbar navbar-inverse navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Inventory", "BrowseInventory", "Home")</li>
                <li>@Html.ActionLink("Authors", "BrowseByAuthor", "Home")</li>
                <li>@Html.ActionLink("Publishers", "BrowseByPublisher", "Home")</li>
                <li>@Html.ActionLink("Locations", "BrowseByLocation", "Home")</li>
                <li>@Html.ActionLink("Contact", "ContactManagement", "Home")</li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    @Html.Partial("_FooterInfo")
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
